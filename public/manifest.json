{
  "manifest_version": 3,
  "name": "ChatGPT 提示詞助手",
  "description": "儲存常用提示詞、匯入匯出，並在 ChatGPT 內用觸發符號快速插入。",
  "version": "1.0.0",
  "permissions": ["storage"],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ChatGPT 提示詞助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ]
}
